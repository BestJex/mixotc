.conversion{margin-bottom:40px;}
.right{margin-left:200px;}

/*上部分*/
.right .form{padding:30px;background:#fff;}
.form .p1{position:relative;line-height:30px;}
.form .p1>label{width:100px;float:left;font-weight:bold;font-size:14px;}
.form .p1 .input-group{margin-left:100px;}
.form .p1 .tip{margin-left:100px;line-height:20px;margin-top:3px;color:#ff794c;}

/*灰色部分*/
.form .card{background:#f4f6fa;padding:20px;margin-top:20px;}
.card .para{margin-top:20px;}
.card .para>label{width:150px;line-height:40px;float:left;margin-top:30px;font-weight:bold;font-size:14px;}
.card .para>p{margin-left:150px;line-height:30px;color:#999;}
.card .para .input-group{margin-left:150px;height:40px;line-height:38px;width:500px;}
.card .para .input-group>p{cursor:pointer;}
.card .para .input-group .drop-trangle{width:40px;}
.card .para .input-group .drop-trangle:after{right:15px;top:17px;}
.card .para .input-group .addin.btn{color:#fff;width:80px;font-size:14px;border-radius:0 2px 2px 0;}
.card .submit{margin:30px 0 10px 150px;}
.card .submit button{width:500px;height:40px;}
.card .submit button.disabled{background:#999;cursor:not-allowed;}

/*列表*/
.right .list{background:#fff;padding:10px 30px;border-top:1px solid #e1e1e1;}
.list .title{margin-top:10px;height:30px;line-height:20px;padding: 5px 0;}
.list .title>h3{font-weight:bold;font-size:14px;letter-spacing:0.16px;display:inline-block;}
.list .title .a1{width:60px;height:25px;line-height:23px;margin-left:50px;}
.list .title .a2{float:right;}

.list .thead{margin-top:20px;padding:0;}

.list .li{border-top:1px solid #e1e1e1;height:70px;padding:15px 0;}
.list .li>div{display:inline-block;vertical-align:top;line-height:39px;padding-right:10px;}
.list .li>div>p{line-height:20px;}
.list .li>div.in{color:#8bb756;}
.list .li>div.out{color:#d66c49;}

.time{width:180px;}
.type{width:180px;}
.coin{width:180px;}
.num{width:180px;}
.recvAddr{width:180px;}
