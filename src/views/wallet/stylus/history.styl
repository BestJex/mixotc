.history{margin-bottom:40px;}
.right{margin-left:200px;}

/*过滤*/
.right .filter{padding:10px 30px;background:#fff;display:flex;user-select:none;}
.filter .f1{border-radius:2px;display:inline-flex;position:relative;border:1px solid #ffb422;width:450px;}
.f1>p{background:#f4f6fa;line-height:28px;padding:0 10px;cursor:pointer;border-right:1px solid #e1e1e1;font-size:13px;color:#333;letter-spacing:0;}
.f1>p:hover{color:#666;}
.f1>p:after{content:"";display:inline-block;border:5px solid transparent;border-top-color:#999;vertical-align:-3px;margin-left:8px;}
.f1>input{padding:0 10px;flex-grow:1;min-width:0;}
.f1>img{align-self:center; margin-right:10px;}
.f1>img:hover{cursor:pointer; opacity:0.8;}
.f1>button{width:72px;cursor:pointer;background:url(/static/images/search.png) no-repeat center center #ffb422;}
.f1>button:hover{background-color:#fea350;}
.f1>ul{position:absolute;left:-1px;right:-1px;top:29px;}

.filter .f2{margin-right:20px;flex-grow:1;text-align:right;}

.filter .f3{font-size:13px;letter-spacing:0.27px;background:#fff3eb; border:1px solid #fff3eb;border-radius:2px;display:inline-flex;
  align-items:center; height:30px;padding:0 1px;}
.f3>a{width:50px;line-height:26px;display:inline-block;text-align:center;color:#999;}
.f3>a:hover{background:#fff;border-radius:2px;color:#ffb422;}

/*表头*/
.right .thead{user-select:none;height:50px;padding:0 30px;}
.thead>div{display:inline-block;vertical-align:top;line-height:50px;font-size:13px;color:#999;letter-spacing:0.27px;position:relative;}
.thead .select{cursor:pointer;}
.thead .select>p{color:#999;}
.thead .select:hover>p{color:#fea350;}
.thead .select>p:after{content:"";display:inline-block;border:5px solid transparent;border-top-color:#999;
  vertical-align:-3px;margin-left:7px;}
.thead .select>ul{position:absolute;top:40px;left:-10px;right:0;}
.thead .multi p{}
.thead .multi>ul>li img{float:right;margin-top:7px;}

/*列表项*/
.right .li{ padding:0 30px; background:#fff; border:1px solid #e1e1e1; margin-bottom:10px;}
.li .booth{font-size:13px;color:#333333; letter-spacing:0.16px;}
.li .booth>div{display:inline-block;vertical-align:top; padding:15px 10px 15px 0;}
.li .booth>div>p{line-height:24px;}
.li .booth a{color:#ffb422;cursor:pointer;}
.li .booth a:hover{color:#fea350;}
.li .booth a>img{height:16px;width:auto;vertical-align:-3px;margin-right:5px;}

.li .bottom{border-top:1px solid #e1e1e1;line-height:50px;font-size:13px;color:#999;letter-spacing:0.23px;}
.li .bottom>span{display:inline-block;}
.li .bottom .orderId{width:210px;}
.li .bottom .remark{margin-left:10px;}

.time{width:120px;}
.type{width:120px;}
.coin{width:120px;}
.addr{width:160px;}
.num{width:160px;}
.state{width:120px;}
.op{width:100px;}

/*错误*/
.right .err{background-position:center 122px; height:500px; padding-top:270px;}

