.history{margin-bottom:40px;}
.right{margin-left:200px;position:relative;}

/*导出账单*/
.right .export{text-align:right;height:20px;line-height:20px;margin-bottom:5px;position:absolute;top:-23px;right:0;}
.right .export>a{}
.right .export>a>img{height:14px;vertical-align:-2px;margin-right:6px;}

/*过滤*/
.right .filter{padding:10px 30px;background:#fff;display:flex;user-select:none;}
.filter .input-group{width:450px;border-color:#ffb422;}
.input-group .addin{width:72px;cursor:pointer;background:#ffb422;}
.input-group .addin>img{height:16px;vertical-align:-2px;}
.input-group .addin:hover{background-color:#fea350;}
.input-group .drop>li .fz-gray{margin-left:15px;color:#999;font-size:12px;}
.input-group .drop>li .fz-addr{font-size:12px;}
.filter .f2{margin-right:20px;flex-grow:1;text-align:right;}
.filter .f3{background:#fff3eb;border:1px solid #fff3eb;border-radius:2px;display:inline-flex;align-items:center; height:30px;padding:0 1px;}
.f3>a{width:50px;line-height:26px;display:inline-block;text-align:center;color:#999;}
.f3>a:hover{background:#fff;border-radius:2px;color:#ffb422;}

/*列表项*/
.right .li{padding:0 30px; background:#fff; border:1px solid #e1e1e1; margin-bottom:10px;}
.li .booth{letter-spacing:0.16px;}
.li .booth>div{display:inline-block;vertical-align:top; padding:15px 10px 15px 0;}
.li .booth>div>p{line-height:24px;}
.li .booth>div .in{color:#8bb756;}
.li .booth>div .out{color:#d66c49;}
.li .booth>div.coin img{width:16px;height:auto;vertical-align:-3px;margin-right:5px;}
.li .booth a{color:#ffb422;cursor:pointer;}
.li .booth a:hover{color:#fea350;}
.li .booth a>img{height:16px;width:auto;vertical-align:-3px;margin-right:6px;}

.li .bottom{border-top:1px solid #e1e1e1;line-height:50px;}
.li .bottom>span{display:inline-block;color:#999;letter-spacing:0.23px;}
.li .bottom .orderId{width:210px;}

.time{width:120px;}
.type{width:120px;}
.coin{width:120px;}
.addr{width:160px;}
.num{width:160px;}
.state{width:120px;}
.op{width:100px;}

/*错误*/
.right .err{background-position:center 122px; height:500px; padding-top:270px;}

