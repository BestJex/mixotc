.verify{ margin-top:40px; margin-bottom:40px;}
.verify h2 {height:30px; padding-left:5px; line-height:30px; font-size:20px; font-weight:bold; color:#333; letter-spacing:0.41px;}
.verify h2::before{display:inline-block; position:relative; top:2px; left:0; content:''; width:3px; height:20px;
  margin-right:10px; background-color:#FFB422;}

.verify .main{ margin-top:28px;}
.verify .main::after{ clear:both; content:''; display:block;}

.right {width:1000px;margin-left:200px;}
.right .tab{background:#fff; height:60px; line-height:58px; margin-bottom:20px; padding:0 30px; font-size:16px;}
.right .tab>li{display:inline-block; width:100px; text-align:center; color:#999999; letter-spacing:0.33px; cursor:pointer;}
.right .tab>li.active{ color:#FFB422; border-bottom:2px solid #FFB422;}

