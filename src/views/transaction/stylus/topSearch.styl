/*TopSearch样式*/
.header{
  display:flex;
  height:100px;
  padding 0 30px
  align-items: center;
  background: #FFF;
}

.header>h2 {
  float:left;
  height: 44px;
  padding-top: 6px;
  width:130px;
}
.header>h2 img {
  float: left
  width: 37px;
  height: 37px;
  margin-right: 15px;
  border-radius: 50%;
  vertical-align: middle;
}
.header>h2 p {
  float: left
  max-width:65px;
  overflow:hidden;
  white-space:nowrap;
}
.header>h2 p span {
  display: block;
  font-size: 16px;
  letter-spacing: 0.18px;
}
.header>h2 p b{
  display: block;
  font-size: 12px;
  color: #999;
  letter-spacing: 0.14px;
}

/*搜索框*/
.header .f1{flex-grow:1; height:30px;}
.header .f1 .search{
  width:456px;
  border:1px solid #e1e1e1;
  border-radius:2px;
  display:inline-flex;
  position:relative;
  background:#fff;
}
.search>span{
  font-size:13px;
  color:#999;
  line-height:28px;
  padding:0 25px 0 10px;
  position:relative;cursor:
  pointer;background:#f4f6fa;
  border-right:1px solid #e1e1e1;
}
.search>span:after{content:"";border:5px solid transparent; border-top-color:#999;position:absolute; top:12px; right:10px;}
.search>ul{position:absolute;left:-1px;right:-1px;top:29px;background:#fff;border:1px solid #e1e1e1;border-top:none;z-index:100;}
.search>ul>li{padding:0 10px; line-height:30px; cursor:pointer; color:#333; font-size:13px;}
.search>ul>li:hover{background:#fff3eb;}
.search ul>li .gray{ margin-left:15px; color:#999; font-size:12px;}
.search ul>li .coin{width:20px;height:20px;vertical-align:-5px;margin-right:10px;}
.search ul>li.notip{pointer-events:none;color:#999;}
.search>img{align-self:center;margin-right:10px;}
.search>img:hover{cursor:pointer; opacity:0.8;}
.search>input{ padding:0 10px; flex-grow:1;}
.search>a{width:72px; background:url(/static/images/search.png) no-repeat center center; background-color:#e1e1e1;}
.search>b{
  position: absolute;
  left: 0;
  top: 32px;
  color: #FF794C;
  font-size: 11px;
}

/*输入框激活样式*/
.header .f1 .search.active{border-color:#ffb422;}
.header .f1 .search.active a{background-color:#ffb422;}
.header .f1 .search.active a:hover{background-color:#fea350;}

.header .top5{display:inline-block;}
.top5 li{
  position:relative;
  float:left;
  width: 88px;
  height: 30px;
  padding 8px 10px 10px
  margin-right:20px;
  font-size:13px;
  background: #FFF
  border: 1px solid #E1E1E1;
  border-radius: 2px;
  cursor pointer
}
.top5 li>img {
  width: 9px;
  height: 13px;
  position: absolute;
  top: -1px;
  right: 10px
}
.top5 li:hover {
  border: none;
  box-shadow: 0 2px 13px 0 #D6D6D6;
}
.top5 li.top-active {
  border: none;
  box-shadow: 0 2px 13px 0 #D6D6D6;
}
.top5 li p img {
  width: 13px;
  height: 13px;
  margin-right: 10px;
  border-radius: 50%;
  vertical-align: middle
}
.top5 li span {
  font-size: 11px;
  color: #999;
  letter-spacing: 0.12px;
  margin-left: 27px
}
.top5 li:last-child{margin-right:0;}
.top5 li.tuijian:before{ position:absolute; left:10px; top:10px; content:''; width:6px; height:9px;
  background:url(/static/images/recommend_.png) no-repeat;}
.top5 li.tuijian:hover{box-shadow:none;}

